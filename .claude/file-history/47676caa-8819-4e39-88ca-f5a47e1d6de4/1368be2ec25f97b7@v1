# frozen_string_literal: true

require "rails_helper"

RSpec.describe SlotRecapture::Configuration, type: :model do
  describe ".current" do
    it "returns the most recent configuration" do
      older = FactoryBot.create(:slot_recapture_configuration, created_at: 1.day.ago)
      newer = FactoryBot.create(:slot_recapture_configuration, created_at: 1.hour.ago)

      expect(described_class.current).to eq(newer)
    end

    it "returns a new instance with defaults when no configuration exists" do
      result = described_class.current

      expect(result).to be_a(SlotRecapture::Configuration)
      expect(result).not_to be_persisted
      expect(result.data).to be_a(SlotRecapture::ConfigurationData)
    end
  end

  describe "associations" do
    it "belongs to created_by staffer" do
      staffer = FactoryBot.create(:staffer)
      config = FactoryBot.create(:slot_recapture_configuration, created_by: staffer)

      expect(config.created_by).to eq(staffer)
    end

    it "allows nil created_by" do
      config = FactoryBot.build(:slot_recapture_configuration, created_by: nil)

      expect(config).to be_valid
    end
  end

  describe "#data" do
    it "serializes and deserializes ConfigurationData" do
      config = FactoryBot.create(:slot_recapture_configuration)
      config.data = SlotRecapture::ConfigurationData.new(weight_same_provider: 0.5)
      config.save!
      config.reload

      expect(config.data.weight_same_provider).to eq(0.5)
    end
  end
end
