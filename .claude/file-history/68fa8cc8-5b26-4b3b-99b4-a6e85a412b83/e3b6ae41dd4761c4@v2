<% accessible_channels = Chat::AccessibleStafferChannel.for(account: account, staffer: staffer, member: member) %>
<% accessible_channels.each do |accessible_channel| %>
  <li>
    <%= link_to(
          accessible_channel.short_name,
          account_member_chat_path(
            account,
            member,
            accessible_channel.sendbird_chat_channel,
            sendbird_user_id: accessible_channel.sendbird_user,
            secondary_tab: accessible_channel.parameterized_name
          )
        ) %>
    <% if accessible_channel.unread_messages? %>
      <span class="badge badge-info">New</span>
    <% end %>
    <% if accessible_channel.deactivated? %>
      <span class="badge badge-info">Deactivated</span>
    <% end %>
  </li>
<% end %>
<% if accessible_channels.blank? %>
  <%= "-" %>
<% end %>
