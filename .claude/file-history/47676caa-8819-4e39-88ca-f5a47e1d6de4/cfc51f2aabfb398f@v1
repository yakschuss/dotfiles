# frozen_string_literal: true

module SlotRecapture
  class Configuration < ApplicationRecord
    attribute :data, AttributeTypes::JsonModel.new(SlotRecapture::ConfigurationData)

    belongs_to :created_by, class_name: "Staffer", optional: true

    def self.current
      order(:created_at).last || new(data: ConfigurationData.new)
    end
  end
end
