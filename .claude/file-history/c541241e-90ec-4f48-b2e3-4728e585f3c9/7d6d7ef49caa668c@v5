  <div class="row mb-lg-3">
    <%= render Staffers::CareCases::Chats::StatusComponent.new(channel: channel) %>
  </div>

  <div class="row">

    <div class="col">
      <div class="flex gap-2 items-center">
        <%= render Prism::Button.new(
              url: account_member_chat_unread_messages_path(account, member, channel, sendbird_user_id: user),
              variation: :secondary,
              size: :sm,
              format: :button,
              id: "messages-unread-button"
            ) do %>
          Mark as unread
        <% end %>

        <% if ChatMarkerPolicy.new(staffer).create? %>
          <%= render Prism::Button.new(
                url: coach_workflows_sendbird_chat_channel_membership_path(membership),
                variation: :secondary,
                size: :sm,
                format: :button,
                method: :patch,
                params: { sendbird_chat_channel_membership: { starred: !membership.starred? } }
              ) do %>
            <span class="flex items-center gap-2">
              <%= inline_svg_tag("icons/streamline/star.svg", class: "size-4 fill-current") %>
              <%= membership.starred? ? "Remove star" : "Add star" %>
            </span>
          <% end %>

          <%= render Prism::Button.new(
                url: account_member_chat_flag_path(account.id, member.id, channel.id, sendbird_user_id: user.id),
                variation: :secondary,
                size: :sm,
                format: :button,
                method: safety_flag.present? ? :delete : :post,
                classes: safety_flag.present? ? "" : "!text-red-800"
              ) do %>
            <%= safety_flag.present? ? "Flagged as safety risk" : "Flag as safety risk" %>
          <% end %>
        <% end %>

        <% if SupplementalChatCoachPolicy.new(staffer).create? %>
          <div data-controller="modals events">
            <%= turbo_frame_tag :supplemental_coach_form do %>
              <%= render Staffers::Accounts::Chats::SupplementalCoachFormComponent.new(
                    account: account,
                    member: member,
                    chat_type: channel.chat_type
                  ) %>
            <% end %>
          </div>
        <% end %>

        <% if channel.chat_type_member_support? %>
          <% if conversation&.open? && conversation&.claimed_by?(staffer) %>
            <%= render Prism::Button.new(
                  url: member_support_read_conversations_path(sendbird_chat_channel_id: channel.id),
                  variation: :secondary_danger,
                  size: :sm,
                  format: :button,
                  data: {turbo_frame: "_top"},
                  id: "close-conversation-button"
                ) do %>
              Mark as closed
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
